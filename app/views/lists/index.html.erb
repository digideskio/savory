<div class="text-center">
<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<% if @lists.length == 0 %>
  <br><p>You don't have any lists yet. Start creating them now!</p>
<% end %>

<% @lists.each do |list| %>
  <h3><%= link_to list.name, list %> <%= link_to "<i class=\"fa fa-trash\"></i>".html_safe, list, method: :delete, data: { confirm: 'Are you sure?' } %></h3>
  <% if list.description.length > 0 %>
    <%= list.description %><br>
  <% end %><br>
<% end %>

</div>
