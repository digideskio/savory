<div class="text-center">
<p id="notice"><%= notice %></p>

<h1>
  <%= @list.name %>
  <% if @list.places.length > 0 %>
    <%= link_to "<i class=\"fa fa-link\"></i>".html_safe, :controller => "lists", :action => "share", :id => @list.id %>
  <% end %>
</h1><br>
<p><%= @list.description %></p>

<% if @list.places.length > 0 %>
  <% @list.places.each do |place| %>
    <h3>
      <% if place.url.length > 0 %>
        <a href="<%= place.url =%>"><%= place.name %></a>
      <% else %>
        <%= place.name %>
      <% end %>
    </h3>
    <p><%= place.location %></p>
    <button type="button" class="btn btn-default btn-xs"><%= link_to 'Edit', edit_place_path(place) %></button>
    <button type="button" class="btn btn-default btn-xs"><%= link_to 'Delete', place, method: :delete, data: { confirm: 'Are you sure?' } %></button>
  <% end %>
<% else %>
  <p>Add to this list by creating a new place!</p>
<% end %>

</div>
