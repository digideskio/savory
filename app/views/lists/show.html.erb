<div class="text-center">
<p id="notice"><%= notice %></p>

<h1>
  <%= @list.name %>
  <% if @list.places.length > 0 %>
    <%= link_to "<i class=\"fa fa-share\"></i>".html_safe, :controller => "lists", :action => "share", :id => @list.id %>
  <% end %>
</h1><br>
<p><%= @list.description %></p>

<% if @list.places.length > 0 %>
  <table class="table">
    <thead>
      <tr>
        <th class="text-center">Name</th>
        <th class="text-center">Location</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <% @list.places.each do |place| %>
      <tr>
        <td>
          <% if place.url.length > 0 %>
            <a href="<%= place.url =%>"><%= place.name %></a>
          <% else %>
            <%= place.name %>
          <% end %>
        </td>
        <td><%= place.location %></td>
        <td><button type="button" class="btn btn-default"><%= link_to 'Edit', edit_place_path(place) %></button></td>
        <td><button type="button" class="btn btn-default"><%= link_to 'Delete', place, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
      <% end %>
  </table>
<% else %>
  <p>Add to this list by creating a new place!</p>
<% end %>

</div>
