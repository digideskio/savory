<div class="text-center">
  <% flash.each do |key, value| %>
    <p class="alert alert-<%= key %>"><%= value %></p>
  <% end %>

  <h1>
    <%= @list.name %>
    <% if @list.places.length > 0 %>
      <%= link_to "<i class=\"fa fa-link\"></i>".html_safe, :controller => "lists", :action => "share", :id => @list.id %>
    <% end %>
  </h1><br>
  <p><%= @list.description %></p>

  <% if @list.places.length > 0 %>
    <% @list.places.each do |place| %>
      <h3>
        <% if place.url.length > 0 %>
          <a href="<%= place.url =%>"  target="_blank"><%= place.name %></a>
        <% else %>
          <%= place.name %>
        <% end %>
        <%= link_to "<i class=\"fa fa-pencil\"></i>".html_safe, edit_place_path(place) %>
        <%= link_to "<i class=\"fa fa-trash\"></i>".html_safe, place, method: :delete, data: { confirm: 'Are you sure?' } %>
      </h3>
      <p><%= place.location %></p>
    <% end %>
  <% else %>
    <p>Add to this list by creating a new place!</p>
  <% end %>

</div>
