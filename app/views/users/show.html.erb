<div class="text-center">
  <% flash.each do |key, value| %>
    <p class="alert alert-<%= key %>"><%= value %></p>
  <% end %>

<% if @user.photo_url %>
  <img src="<%= @user.photo_url %>" style="max-height: 250px;">
<% end %>

<h1><%= @user.first_name %> <%= @user.last_name %></h1>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p><br>

<%= link_to 'Edit', edit_user_path(@user) %>
</div>
