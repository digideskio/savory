<div class="text-center">
  <% flash.each do |key, value| %>
    <p class="alert alert-<%= key %>"><%= value %></p>
  <% end %>

  <h1>Places</h1>

  <% if @current_user.places.length > 0 %>
    <table class="table">
      <thead>
        <tr>
          <th class="text-center">Name</th>
          <th class="text-center">Location</th>
          <th class="text-center">List</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @places.each do |place| %>
          <tr>
            <td>
              <% if place.url.length > 0 %>
                <a target="_blank" href="<%= place.url =%>"><%= place.name %></a>
              <% else %>
                <%= place.name %>
              <% end %>
            </td>
            <td><%= place.location %></td>
            <td><%= link_to place.list.name, place.list %></td>
            <td><%= link_to "<i class=\"fa fa-pencil\"></i>".html_safe, edit_place_path(place) %></td>
            <td><%= link_to "<i class=\"fa fa-trash\"></i>".html_safe, place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <br><p>You don't have any places yet. Start creating them now!</p>
  <% end %>

  <br>
</div>
