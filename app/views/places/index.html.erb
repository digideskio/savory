<p id="notice"><%= notice %></p>

<h1>Places</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><a href="<%= place.url =%>"><%= place.name %></a></td>
        <td><%= place.location %></td>
        <td><button type="button" class="btn btn-default"><%= link_to 'Show', place %></button></td>
        <td><button type="button" class="btn btn-default"><%= link_to 'Edit', edit_place_path(place) %></button></td>
        <td><button type="button" class="btn btn-default"><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

